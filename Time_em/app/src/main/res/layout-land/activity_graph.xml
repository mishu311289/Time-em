<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout"
    android:layout_height="match_parent"
    android:background="@color/gradientBgEnd"
    android:orientation="vertical">

    <include android:id="@+id/headerLayout" layout="@layout/include_toolbar"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:id="@+id/scrollView2">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lay_upperGraph"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lay_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <TextView
                    android:gravity="center"
                    android:layout_width="20dp"
                    android:visibility="gone"
                    android:layout_marginLeft="00dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textColor="@color/white"
                    android:background="@color/seperator"/>
                </LinearLayout>
            <TextView
                android:id="@+id/left_side"
                android:layout_width="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="00dp"
                android:background="@color/seperator"/>

              <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="00dp"
                    android:background="@color/editBg">

            <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:visibility="visible"
                  android:layout_marginRight="0dp"
                  android:orientation="horizontal">

                      <TextView
                         android:layout_width="0dp"
                          android:layout_weight="2.4"
                          android:gravity="end"
                          android:layout_height="match_parent"
                          android:background="@color/transparent"/>
                      <TextView
                        android:layout_width="2dp"
                        android:layout_marginTop="3dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/dotted_line"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="2.4"
                          android:gravity="end"
                          android:layout_height="match_parent"
                          android:background="@color/transparent"/>
                      <TextView
                          android:layout_width="2dp"
                          android:layout_marginTop="3dp"
                          android:layout_height="match_parent"
                          android:background="@drawable/dotted_line"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="2.4"
                          android:gravity="end"
                          android:layout_height="match_parent"
                          android:background="@color/transparent"/>
                      <TextView
                          android:layout_width="2dp"
                          android:layout_marginTop="3dp"
                          android:layout_height="match_parent"
                          android:background="@drawable/dotted_line"/>
                      <TextView
                          android:layout_width="0dp"
                          android:layout_weight="2.4"
                          android:gravity="end"
                          android:layout_height="match_parent"
                          android:background="@color/transparent"/>
                      <TextView
                          android:layout_width="2dp"
                          android:layout_marginTop="3dp"
                          android:layout_height="match_parent"
                          android:background="@drawable/dotted_line"/>
                      <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2.4"
                        android:gravity="end"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"/>
                  </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="vertical"
                android:gravity="bottom">

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:id="@+id/graphLayout"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="00dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    />

                </LinearLayout>

              </RelativeLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom_side"
            android:visibility="visible"
            android:background="@color/seperator"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lay_hours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_colorIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        </LinearLayout>
    </LinearLayout>

   </ScrollView>
</LinearLayout>