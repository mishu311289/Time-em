    	android:layout_height="wrap_content"
    	android:layout_alignParentTop="true"
    	android:text="Please enter your pin"
    	android:gravity="center"
    	android:textColor="@color/textColor"
    	android:textSize="13sp" 
    	android:padding="10dip"
    />
