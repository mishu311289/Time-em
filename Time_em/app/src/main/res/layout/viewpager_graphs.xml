<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/graphLayout"
        android:layout_height="180dp"
        android:layout_below="@+id/changeStatus"
        android:layout_above="@+id/footer"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.time_em.utils.VerticalTextView
            android:id="@+id/verticalLabel"
            android:text="No. of hours"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="@color/black"
            android:textSize="12sp"/>

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        android:background="@color/dullTextColor" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/sep5"
                    android:text="5"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/scale5"/>
                <TextView
                    android:id="@+id/sep5"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/seperator"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/sep4"
                    android:text="4"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/scale4"/>
                <TextView
                    android:id="@+id/sep4"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/seperator"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sep3"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/sep3"
                    android:text="3"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/scale3"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sep2"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/sep2"
                    android:text="2"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/scale2"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sep1"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/sep1"
                    android:text="1"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/scale1"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sep0"
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/seperator"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/sep0"
                    android:text="0"
                    android:layout_marginLeft="5dp"
                    android:textSize="8sp"
                    android:textColor="@color/black"
                    android:id="@+id/scale0"/>
            </RelativeLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/task_graph"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            tools:listitem="@layout/graph_slider_row"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        />

</LinearLayout>